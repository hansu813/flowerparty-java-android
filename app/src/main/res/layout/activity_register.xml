<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextRID"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:background="@drawable/shape"
                android:ems="10"
                android:fontFamily="@font/ahn2006_m"
                android:hint="아이디"
                android:inputType="textPersonName"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_green"
                android:textSize="30sp"

                />

            <TextView
                android:id="@+id/textValidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="중복확인"
                android:textColor="@color/gray_green"/>
        </LinearLayout>

        <EditText
            android:id="@+id/editTextRPW"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="@font/ahn2006_m"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray_green"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextPWC"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="@font/ahn2006_m"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray_green"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextREmail"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="@font/ahn2006_m"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray_green"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextRName"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="@font/ahn2006_m"
            android:hint="닉네임"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray_green"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape"
            android:fadingEdge="vertical"
            android:fontFamily="@font/ahn2006_m"

            android:text="회원가입"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/gray_green"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>