<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@color/main">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="247dp"
        android:layout_height="78dp"
        android:fontFamily="@font/broadway_regular"
        android:text="Flower"
        android:textColor="@color/flower"
        android:textSize="63sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="159dp"
        android:layout_height="64dp"
        android:fontFamily="@font/broadway_regular"
        android:text="Party"
        android:textColor="@color/party"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />


    <EditText
        android:id="@+id/editTextID"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:fontFamily="@font/ahn2006_m"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:padding="7dp"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray_green"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.04" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/shape"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextID"
        app:layout_constraintVertical_bias="0.044">

        <EditText
            android:id="@+id/editTextPW"
            android:layout_width="208dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="@font/ahn2006_m"
            android:hint="비밀번호"
            android:inputType="textPersonName"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray_green"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="비밀번호 찾기"
            android:textColor="@color/gray"
            android:textSize="10sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/shapebtn"
        android:fontFamily="@font/ahn2006_m"
        android:text="로그인"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="84dp"
        android:layout_height="25dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/ahn2006_m"
        android:text="회원가입"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="131dp"
        android:layout_height="22dp"
        android:fontFamily="@font/ahn2006_m"
        android:text="아직 가입하지 않았나요?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn" />



</androidx.constraintlayout.widget.ConstraintLayout>
